<h3>Edit Message</h3>
<%= form_for @message do |f| %>

<%= f.label :content, "Message" %>
<%= f.text_field :content %>

<%= f.label :from_id %>
<%= f.collection_select :from_id, User.all, :id, :name %>

<%= f.label :to_id %>
<%= f.collection_select  :to_id, User.all, :id, :name %>
    
<%= f.label :chatroom_id %>
<%= f.collection_select  :chatroom_id, Chatroom.all, :id, :title %>

<%= f.submit %>
<% end %>
