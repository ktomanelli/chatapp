<h3>Edit User</h3>
<%= form_for @user do |f| %>
    
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :username %>
<%= f.text_field :username %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<%= f.label :img_url, 'Profile Pic' %>
<%= f.text_field :img_url %>

<%= f.submit %>
<% end %>