<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

<h3>Login</h3>
<%= form_tag '/login', method: :post do %>
 <div>
  <%= label_tag :username %>
  <%= text_field_tag :username%>
 </div>
 <div>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
 </div>
  <%= submit_tag "Submit" %>
<%end%>