<!DOCTYPE html>
<html>
  <head>
    <title>Chatapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%if @current_user==nil%>
    <%= link_to 'login', login_path %><br/>
    <%= link_to 'Create an Account', new_user_path %><br/>
    <%=yield%>
  <%else%>
  <div id="navbar">
  <h1>//Flack</h1>
  <ul id="navlinks">
    <p id="profile"><%= link_to "Welcome, #{@current_user.name}", user_path(@current_user) %></p>
    <p id="logout"><%= link_to 'logout', logout_path %></p>
  </ul>
  </div>
    <div id='app'>
    
        <ul id=sidebar>
          <%Chatroom.get_active_chatrooms(@current_user.id).each do |chatroom|%>
              <%=link_to_unless_current(chatroom.title,chatroom_path(chatroom, :anchor=>"anchor")) do %>
                  <li id="chatroom">
                    <%=link_to chatroom.title, chatroom_path(chatroom), className: 'cur'%>
                  </li>
               <%end%>
          <%end%>
        </ul>

    <div id="messages">
        <%=yield%>
        <div id="anchor"></div>
    </div>
</div>
<%end%>
  </body>
</html>
